<%= content_for(:title, "#{@post.name} | PORTFOLIO") %>

<h1><%= @post.name %></h1>
<p>
  Posted by: <%= link_to @post.user.email, user_path(@post.user) %>
</p>
<hr>
<p>
  <%= @post.description %>
</p>
<hr>
<% if @post.comments.any? %>
  <% @post.comments.each do |comment| %>
    <p><%= link_to comment.user.email, user_path(comment.user)  %> replies: <%= comment.description  %>
    <% if is_admin? || current_user == comment.user %>
      <%= link_to edit_post_comment_path(@post, comment) do %>
        <span class="glyphicon glyphicon-edit orange"></span>
      <% end %>
      <%= link_to post_comment_path(@post, comment), id: "delete_comment_#{comment.id}", data: {confirm: "Destroy Comment?", method: 'delete'} do %>
        <span class="glyphicon glyphicon-remove-sign red"></span>
      <% end %>
    <% end %>
    </p>
  <% end %>
<% end %>

<%= link_to "Reply", new_post_comment_path(@post), class: "btn btn-info"%>

<% if is_admin? || current_user == @post.user %>
  <div class="btn-group btn-group-sm " role="group">
    <%= link_to "Edit", edit_post_path(@post), class: "btn btn-warning" %>
    <%= link_to "Delete", post_path(@post), class: "btn btn-danger",
                                          data: {confirm: "Destroy Post?",
                                                  method: 'delete'} %>
  </div>
<% end %>
